@model EasyZap.Models.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация мастера";
}

<h2>Регистрация мастера</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Имя</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Пароль</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Зарегистрироваться</button>
</form>