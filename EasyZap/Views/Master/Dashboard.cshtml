<link rel="stylesheet" href="~/css/master-dashboard.css"/>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Личный кабинет мастера</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

    <div class="container">
        <div class="profile">
            <img src="" alt="Фото мастера">
            <div class="profile-info">
                <h2>Иван Иванов</h2>
                <p>Барбер, 5 лет опыта</p>
                <p>Специализация: мужские стрижки, бритьё</p>

                <div class="actions">
                    <div class="edit-buttons">
                        <button>Редактировать профиль</button>
                        <button>Записать</button>
                        <button>Создать ссылку</button>
                    </div>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-action="Logout" asp-controller="Auth" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="logout-btn">Выйти</button>
                        </form>
                    }

                </div>
            </div>
        </div>

        <div class="section">
            <h3>Моё расписание</h3>
            <div class="schedule">
                <div class="calendar-container">
                    <!-- Календарь -->
                    <div class="calendar">
                        <div class="calendar-header">
                            <button id="prevMonth">⟵</button>
                            <span id="monthName"></span>
                            <button id="nextMonth">⟶</button>
                        </div>
                        <div class="calendar-grid" id="calendarGrid"></div>
                    </div>

                    <!-- Панель дня -->
                    <div class="day-panel" id="dayPanel">
                        <h4 id="selectedDate">Дата</h4>
                        <div class="day-editor">
                            <label>Начало рабочего дня:</label>
                            <input type="time" id="startTime">

                            <label>Конец рабочего дня:</label>
                            <input type="time" id="endTime">

                            <label>Заметки:</label>
                            <textarea id="notes" rows="3"></textarea>

                            <button id="saveDay">Сохранить</button>
                        </div>

                        <div class="day-appointments">
                            <h4>Текущие записи</h4>
                            <ul id="appointmentsList"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <h3>Ближайшие записи</h3>
            <div class="appointments">
                <div class="card">
                    <p><strong>Алексей Петров</strong></p>
                    <p>Запись: 5 авг, 14:00</p>
                </div>
                <div class="card">
                    <p><strong>Мария Смирнова</strong></p>
                    <p>Запись: 6 авг, 11:30</p>
                </div>
                <!-- Ещё записи -->
            </div>
        </div>
    </div>

    @section Scripts{
        <script src="/js/schedule.js"></script>
    }
</body>
</html>