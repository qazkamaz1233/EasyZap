@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EasyZap.Models.Master
<div class="container mt-5">
    <h2>Регистрация мастера</h2>
    <form asp-controller="Master" asp-action="Register" method="post">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" name="PasswordHash" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Имя</label>
            <input type="text" name="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Услуги (например, Стрижка:1000)</label>
            <input type="text" name="Service" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">График (например, 10:00-20:00,Вс:выходной)</label>
            <input type="text" name="Schedule" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
</div>