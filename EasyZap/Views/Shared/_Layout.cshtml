<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EasyZap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #0D47A1;">
        <div class="container">
            <a class="navbar-brand text-white" style="font-family: 'Montserrat', sans-serif; font-weight: 700;" href="/">EasyZap</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary mx-1" style="background-color: #FFB300; border-color: #FFB300; color: #000; border-radius: 8px;" href="@Url.Action("Login", "Master")">Войти как мастер</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary mx-1" style="background-color: #FFB300; border-color: #FFB300; color: #000; border-radius: 8px;" href="@Url.Action("Register", "Master")">Зарегистрироваться как мастер</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary mx-1" style="background-color: #00695C; border-color: #00695C; color: #fff; border-radius: 8px;" href="@Url.Action("CreateAppointment", "Master")">Записаться</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>