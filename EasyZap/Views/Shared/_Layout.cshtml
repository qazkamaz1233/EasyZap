<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - EasyZap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Tilda стили -->
    <link rel="stylesheet" href="/tilda/css/tilda-grid-3.0.min.css" />
    <link rel="stylesheet" href="/tilda/css/tilda-cover-1.0.min.css" />
    <link rel="stylesheet" href="/tilda/css/tilda-cards-1.0.min.css" />
    <link rel="stylesheet" href="/tilda/css/fonts-tildasans.css" />

    <!-- Добавь свой CSS, если есть -->
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form asp-action="Logout" asp-controller="Auth" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link" style="color:white;">Выйти</button>
        </form>
    }

    <main>
        @RenderBody()
    </main>

    <!-- Футер, если нужно -->
    <!-- Скрипты -->
    <script src="/tilda/js/tilda-scripts-3.0.min.js"></script>
</body>
</html>